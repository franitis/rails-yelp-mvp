<div class = "container">
  <h2><%= @restaurant.name %></h2>
  <p><strong>Address: </strong><%= @restaurant.address %></p>
  <p><strong>Category: </strong><%= @restaurant.category %></p>
  <p><strong>Phone number: </strong><%= @restaurant.phone_number %></p>
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>
  <br>
  <%= link_to "Submit a Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  <br>
  <%= link_to "Back to index", restaurants_path %>
</div>
